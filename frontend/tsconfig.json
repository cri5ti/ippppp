{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ],
  "include": ["./src"]
}